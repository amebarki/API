<h1>Liste des utilisateurs</h1>
<form method="get" name="formulaire" action="{{ url('gamers.new') }}">
  <button type="submit">Ajouter</button>
</form>
<table>
<thead>
  <tr>
    <th>ID</th>
    <th>PSEUDO</th>
    <th>Team</th>
    <th>ACTION</th>
  </tr>
</thead>
<tbdoy>
{% for gamer in gamers %}
   <tr>
     <td>{{gamer.id}}</td>
     <td>{{gamer.team}}</td>
     <td>{{gamer.pseudo}}</td>
     <td>
       <form method="post" name="formulaire" action="{{ url('gamers.delete', {id: gamer.id}) }}">
            <button type="submit">Supprimer</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('gamers.edit', {id: gamer.id}) }}">
          <button type="submit">Modifier</button>
        </form>
      </td>
      <td>
        <form method="get" name="formulaire" action="{{ url('gamers.display', {id: gamer.id}) }}">
          <button type="submit">Followers</button>
        </form>
      </td>
   </tr>
{% endfor %}
</tbdoy>
</table>
